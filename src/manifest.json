{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "FilePlay",
  "short_name": "FilePlay",
  "start_url": "/",
  "scope": "/",
  "theme_color": "white",
  "display": "standalone",
  "background_color": "#fff",
  "description": "A P2P filesharing app.",
  "share_target": {
    "action": "/handle",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "files",
          "accept": [
            "*/*",
            ".*"
          ]
        }
      ]
    }
  }
}
